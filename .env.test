# WhatsApp Configuration
# Token used by Meta to verify the webhook endpoint
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# Meta App Secret (from Meta Developer Portal > App Settings > Basic)
# Used to verify X-Hub-Signature-256 on incoming webhooks
META_APP_SECRET=your_app_secret_here

# WhatsApp Business API Configuration
# Phone Number ID from WhatsApp Business Platform
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Access Token for sending messages (from Meta Developer Portal)
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# OpenAI Configuration
# API Key for food selection (from OpenAI Platform)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Server Configuration
PORT=3000
