{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["bun", "node"]
  },
  "include": ["src/**/*", "scripts/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
